{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@application/*": ["./src/application/*"],
      "@cmd/*": ["./src/cmd/*"],
      "@configs/*": ["./src/configs/*"],
      "@domain/*": ["./src/domain/*"],
      "@errors/*": ["./src/errors/*"],
      "@persistent/*": ["./src/infrastructure/persistent/*"],
      "@rest/*": ["./src/presentation/rest/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": []
}
