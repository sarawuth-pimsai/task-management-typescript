{
  "ts-node": { "files": true },
  "files": ["src/presentation/rest/@types/express-request.ts"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@application/*": ["application/*"],
      "@cmd/*": ["cmd/*"],
      "@configs/*": ["configs/*"],
      "@domain/*": ["domain/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@persistent/*": ["infrastructure/persistent/*"],
      "@rest/*": ["presentation/rest/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": []
}
